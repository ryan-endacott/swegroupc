<%= simple_form_for(@submission, html: {class: 'form-vertical', multipart: true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input 'assignment_name', label: 'Assignment Name:' %>
    <%= f.input 'section_name', label: 'Section Name:' %>
    <%= f.input :file, as: :file, label: 'File to submit:', input_html: {multiple: true} %>
  </div>

  <br>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
