<p id="notice"><%= notice %></p>

<h1>Course Name: <%= @course.name %></h1>

<h3>Teaching Assistants:</h3>
<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Pawprint</th>
        <th>Remove</th>
      </tr>
    </thead>

    <tbody>
      <% @tas.each do |ta| %>
        <tr>
          <td><%= ta.name %></td>
          <td><%= ta.pawprint %></td>
          <td><%= link_to 'Remove TA', '#TODO', method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <%= form_tag '#todourl' do %>
          <td>Add Teaching Assistant</td>
          <td><%= text_field_tag 'ta[pawprint]', nil, placeholder: 'Pawprint'%></td>
          <td><%= submit_tag 'Create TA', class: 'btn btn-success' %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>


<h3>Assignments:</h3>
<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Assignment Name</th>
        <th>Due Date</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @assignments.each do |assignment| %>
        <tr>
          <td><%= link_to assignment.name, course_assignment_path(@course, assignment) %></td>
          <td><%= assignment.due_date %></td>
          <td><%= link_to 'Edit', edit_course_assignment_path(@course, assignment), class: 'btn btn-success' %></td>
          <td><%= link_to 'Delete', course_assignment_path(@course, assignment), method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure? This will delete ALL associated submissions.' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to 'Back', courses_path, class: 'btn btn-primary' %>
<%= link_to 'Edit Course', edit_course_path(@course), class: 'btn btn-success' %>
<%= link_to 'New Assignment', new_course_assignment_path(@course), class: 'btn btn-success' %>
