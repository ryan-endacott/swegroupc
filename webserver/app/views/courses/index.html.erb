<h1>Your Courses</h1>

<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Course Name</th>
        <th>Assignment Count</th>
        <% if current_user.instructor? %>
          <th>Edit</th>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.name, course %></td>
          <td><%= course.assignments.count %>
          <% if current_user.instructor? %>
            <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-success' %></td>
            <td><%= link_to 'Delete', course, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure? This will delete ALL associated assignments and submissions.' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<% if current_user.instructor? %>
  <%= link_to 'New Course', new_course_path, class: 'btn btn-success' %>
<% end %>
