<%= simple_form_for [@course, @assignment] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-md-4">
        <%= f.input :name %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <%= f.input :due_date %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
  <br>
<% end %>
